                :}
            | expr:e1 MULT expr:e2
                {:
                    RESULT = new Expr(sym.MULT, e1, e2);
                :}
            | expr:e1 DIV expr:e2
                {:
                    RESULT = new Expr(sym.DIV, e1, e2);
                :}
            | OPEN_PAR expr:e CLOSE_PAR
                {:
                    RESULT = e;
                :}
            | ID:e
                {:
                    if (symTable.exists(e, myLexer.isAnalyzingFile())) {
                        RESULT = new Expr(e, symTable);
                    } else {
                        RESULT = null;
                    }
                :}
            | INTEGER_LITERAL:e
